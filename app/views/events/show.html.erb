<%movie_selected_path = @movies.find(@event.movie_events[0]["movie_id"])%>
<h1 class="h1 mb-3 p-0"><%=@event.name%></h1>
<div>
  <h3 class="h3 text-center mb-3">
    <i class="fa-solid fa-calendar mr-1"></i>  <%=I18n.l(@event.date, format: :long)%>
  </h3>
  <div class="bg-zinc-800 p-2 rounded-md mb-3">
    <div class="mb-3">
      <h2 class="h2"> <i class="fa-solid fa-users mr-1"></i> <%=@event.group.name%></h2>
    </div>
    <div class="flex flex-row -space-x-3 mb-3">
      <%@event.group.users.each do |user|%>
        <%= image_tag(url_for(user.profile_picture), class: "rounded-full size-8 ring-1 ring-yellow-400 shadow-sm") if user.profile_picture.attached? %>
      <% end %>
    </div>
    </div>
    <div class="bg-zinc-800 p-2 rounded-md">
      <h2 class="h2"><i class="fa-solid fa-film mr-1 text-zinc-400"></i> Film choisi</h2>
      <div class="justify-center items-center">
        <h3 class="h3 mb-3"> <%=movie_selected_path.name%></h3>
        <%= image_tag("https://image.tmdb.org/t/p/w500#{movie_selected_path.poster_url}", alt: "Poster du film", class: "w-18 h-26 border border-yellow-400 rounded-md") if @movies.find(@event.movie_events[0]["movie_id"]).poster_url.present? %>
      </div>
    </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
