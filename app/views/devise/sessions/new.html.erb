<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "mb-4") do |f| %>
  <div class="mb-4">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>
  <div class="mb-4">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>
  <div class="mb-4">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div>
    <%= f.button :submit, "Se connecter", class: "button w-full mb-8" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
